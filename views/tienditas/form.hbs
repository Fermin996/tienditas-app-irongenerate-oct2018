<div>
  <h1>Crea una Tiendita!!!</h1>

  <div>{{error}}</div>

  <form action="{{action}}" method="POST">
    <p>
      Nombre:
      <input type="text" name="name" value="{{tiendita.name}}">
    </p>
    <p>
      Giro Comercial:
      <input type="text" name="giro" value="{{tiendita.giro}}">
    </p>
    <p>
      Owner:
      <input type="text" name="owner" value="{{tiendita.owner}}">
    </p>
    <p>
      <input type="submit" value="Guardar :)">
    </p>
  </form>

</div>